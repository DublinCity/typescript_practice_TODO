{
  "compilerOptions": {
    "outDir": "./dist/", // for ts-compiler
    "sourceMap": true,
    "noImplicitAny": true,
    "esModuleInterop": true, // to use commonjs lib(ex. react)
    "module": "es6", // es6 module(import/export syntax)
    "moduleResolution": "node", // In order to include type definitions linked in package.json files
    "target": "es6", // ES6 language
    "strict": true,
    "jsx": "react",
    "baseUrl": ".",
  },
  "include": ["./src/**/*.ts", "./src/types/**/*.d.ts"],
  "exclude": []
}
